# nginx monit application vhost
#
# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
#
server {
    <% @listen_ports.each do |port| -%>
    listen            <%= port %>;
    <% end -%>
    server_name       <%= @host_name %><% @host_aliases.each do |a| %><%= " #{a}" %> <% end %>;

    location / {
        proxy_pass http://<%= node[:monit][:address] %>:<%= node[:monit][:port] %>;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
    }

    error_log         <%= node[:nginx][:log_dir] %>/monit-error.log;
    access_log        <%= node[:nginx][:log_dir] %>/monit-access.log;
}
